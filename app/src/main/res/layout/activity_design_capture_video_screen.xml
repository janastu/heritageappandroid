<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#e8e8e7"
            android:orientation="vertical" >

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#13b586"
                android:orientation="horizontal"
                android:layout_alignParentTop="true">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Video Tag"
                      android:textColor="#ffffff"
                      android:layout_marginLeft="25dp"
                      android:textSize="18sp"
                      android:textStyle="bold"
                      android:layout_gravity="center_horizontal|center_vertical"/>
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_marginLeft="16dp"
                      android:layout_marginTop="16dp"
                      android:layout_marginRight="16dp"
                      android:layout_marginBottom="30dp"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      android:background="@color/colorGrey"
        >

            <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp" />


            <EditText android:id="@+id/editTextTitle"
                      android:layout_width="fill_parent"
                      android:layout_height="40dp"
                      android:hint="title"
                      android:background="#f3f3f3"

                      android:paddingLeft="5dp"
                      android:layout_marginTop="10dp" />

            <EditText android:id="@+id/editTextDescription"
                      android:layout_width="fill_parent"
                      android:layout_height="100dp"
                      android:hint="description"
                      android:background="#f3f3f3"
                      android:paddingLeft="5dp"
                      android:layout_marginTop="10dp"  />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Select Category"
                      android:textColor="#ffffff"
                      android:layout_marginLeft="25dp"
                      android:textSize="10sp"
                      android:textStyle="bold"

                      android:layout_gravity="left|center_vertical"/>
            <Spinner
                    android:id="@+id/spinnerCategory"

                    android:background="#f3f3f3"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Select Language"
                      android:textColor="#ffffff"
                      android:layout_marginLeft="25dp"
                      android:textSize="10sp"
                      android:textStyle="bold"

                      android:layout_gravity="left|center_vertical"/>
            <Spinner
                    android:id="@+id/spinnerLanguage"
                    android:background="#f3f3f3"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Group"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dp"
                android:textSize="10sp"
                android:textStyle="bold"

                android:layout_gravity="left|center_vertical"/>
            <Spinner
                android:id="@+id/spinnerGroup"
                android:background="#f3f3f3"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
            >








            <Button        android:id="@+id/btnPlayLocalVideo"
                        android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Play "
                    android:onClick="onPlayLocalVideo"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:background="#2683c2"/>

            <Button       android:id="@+id/btnRecordVideo"
                     android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text=" Record  "
                    android:onClick="onRecordVideo"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:background="#eb543b"/>

                <Button         android:id="@+id/btnStoreVideo"
                              android:layout_width="90dp"
                              android:layout_height="38dp"
                              android:layout_gravity="center_horizontal"
                              android:layout_marginTop="10dp"
                              android:text=" Keep This "
                              android:textColor="#fff"
                              android:textSize="13dp"
                              android:background="#ffc107"/>

                <Button         android:id="@+id/btnBrowseVideo"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Browse"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:background="#ff0751"/>


            </LinearLayout>
            <TextView
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/browse"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/selected"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Selected file"
                style=" " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selected"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:id="@+id/file_path"
                android:text="No file has been selected"
                android:textSize="10sp" />
        </LinearLayout>



    </LinearLayout>



</ScrollView>